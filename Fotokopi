<body>
  <div class="container">
    <h2>PDF Fotokopi Sistemi</h2>
    <label>PDF Belgesi Yükle</label>
    <input type="file" accept=".pdf" />
    <button onclick="printPDF()">Yazdır</button>
    <div class="status" id="status"></div>
  </div>

  <script>
    function printPDF() {
      const fileInput = document.querySelector('input[type="file"]');
      const statusDiv = document.getElementById('status');

      if (!fileInput.files.length) {
        alert('Lütfen bir PDF dosyası seçin.');
        return;
      }

      statusDiv.textContent = 'Yazdırılıyor... (Demo)';
      setTimeout(() => {
        statusDiv.textContent = 'Yazdırma tamamlandı! (Simülasyon)';
      }, 2000);
    }
  </script>
</body>
